<header class="header">
  <div class="back-icon">
    <h2>
    <%= link_to groups_path do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
  </h2>
  </div>
  <div class="section-title">
    <h2 class="title"><%= @group.name %></h2>
  </div>
</header>

<main class="group-container">
  <div class="each-group-container">
    <% @group.projects.each do |pr| %>
      <div class ="project-description">
        <%= link_to project_path(pr) do %>
          <p class="project-name"><%= pr.name %></p>
        <% end %>
        <span class="project-date"><%= pr.created_at.strftime('%d %B %Y - %H:%M') %></span>
      </div>
    <% end %>
  </div>
</main>

<div class="new">
  <%= link_to "Add new", new_project_path, class: "save-button" %>
</div>