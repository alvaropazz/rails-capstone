<header class="header">
  <div class="back-icon">
    <h2>
    <%= link_to user_url(current_user) do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
  </h2>
  </div>
  <div class="section-title">
    <h2>New Group</h2>
  </div>
</header>

<main class="submit-form">
  <%= form_for @group, url: groups_path, html: { multipart: true } do |form| %>
    <%= form.text_field :name, required: true, placeholder: "Name", class:"submit-field" %>
    <br>
    <div class="file">
      <label for="file-input" class="file-container">
        Choose Icon
      </label>
      <%= form.file_field :icon, id:"file-input", required: true, class:"file-field" %>
    </div>
    <br>
    <%= form.submit "Save", class:"save-button" %>
    <% @group.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
</main>