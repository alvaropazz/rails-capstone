<header class="header">
  <div class="back-icon">
    <h2>
    <%= link_to user_url(current_user) do %>
      <i class="fas fa-bars"></i>
    <% end %>
  </h2>
  </div>
  <div class="section-title">
    <h2>All Groups</h2>
  </div>
</header>
  
<main class="container">
  <div class="projects-all">
    <% @groups.each do |pr| %>
    <div class="projects-list">
      <div class ="project-description">
        <%= link_to group_path(pr), class: "link" do %>
          <p class="project-name"><%= pr.name %></p>
        <% end %>
        <span class="project-date"><%= pr.created_at.strftime('%d %B %Y - %H:%M') %></span>
      </div>
    </div>
  <% end %>
  </div>
</main>
  
<footer class="footer">
  <div class="create">
    <%= link_to "New Group", new_group_path, class: "new_group" %> 
  </div>
</footer>